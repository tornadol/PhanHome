@using HidoSport.Helpers
@using System.Configuration
@{
    ViewBag.Title = "Chuyên cung cấp mặt hàng viễn thông";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section CssPath{
    <style>
         @Html.Raw(ViewHelper.GetCss("css/home", false))
    </style>
}
@section JsPath{
    @if (Request.Browser.IsMobileDevice)
    {
        <script type="text/javascript" src="~/scripts/home@(ConfigurationManager.AppSettings["Minify"]).mobile.js" defer></script>
    }
    else
    {
        <script type="text/javascript" src="~/scripts/home@(ConfigurationManager.AppSettings["Minify"]).js" defer></script>
    }
}

