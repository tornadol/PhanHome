@using HidoSport.Areas.Admin.Helpers
@using HidoSport.Helpers
@using HidoSport.Areas.Admin.Models
@using DataAccess
@model Request
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section CssPath{}
@section CssInclude{}
@section JsPath{}
@section JsInclude{
    <script src="@(ViewBag.rsrc)js-page/customer.js"></script>
}

<div class="page-content">
    <div class="page-header">
        <h1>
            <a href="@Url.Action("Index")">Danh sách Yêu cầu</a>
            <small>
                <i class="ace-icon fa fa-angle-double-right"></i>
                Chi tiết Danh Mục
            </small>
        </h1>
    </div><!-- /.page-header -->

    <div class="row admin-edit">
        <div class="col-xs-12">
            <!-- PAGE CONTENT BEGINS -->
            <form class="form-horizontal" role="form">
                <div style="min-height:315px;">
                    <div class="form-group">
                        <div class="col-sm-5" style="padding-left:20%">
                            Email
                        </div>
                        <div class="col-sm-7 edit-detail">
                            @Model.Email
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-5" style="padding-left:20%">
                            Số điện thoại
                        </div>
                        <div class="col-sm-7 edit-detail">
                            @Model.Phone
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-5" style="padding-left:20%">
                           Ghi chú
                        </div>
                        <div class="col-sm-7 edit-detail">
                            @Model.Des
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-5" style="padding-left:20%">
                            Trạng thái:
                        </div>
                        <div class="col-sm-7" style="">
                            @StatusHelper.ConverStatusCus(Model.Status)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-5" style="padding-left:20%">
                            Ngày khởi tạo:
                        </div>
                        <div class="col-sm-7 edit-detail">
                            @Model.Create_Day
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-5" style="padding-left:20%">
                            Ngày thay đổi cuối:
                        </div>
                        <div class="col-sm-7 edit-detail">
                            @Model.Change_Day
                        </div>
                    </div>
                </div>

                <div class="clearfix form-actions">
                    <div class="col-md-offset-3 col-md-9">
                        <a class="btn btn-success" type="button" href="@Url.Action("Edit",new { id =Model.Id})">
                            <i class="ace-icon fa fa-pencil-square-o bigger-110"></i>
                            Sửa
                        </a>
                        &nbsp; &nbsp; &nbsp;
                        <a class="btn btn-danger" type="reset" href="@Url.Action("Delete",new { id =Model.Id})">
                            <i class="ace-icon fa fa-trash-o bigger-110"></i>
                            Xóa
                        </a>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>