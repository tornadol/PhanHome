@using System.Web.Mvc.Html
@using HidoSport.Areas.Admin.Helpers
@using HidoSport.Areas.Admin.Models
@model DataAccess.Request
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section CssPath{
}
@section CssInclude{
}
@section JsPath{
    <script src="@(ViewBag.rsrc)js-page/request.js"></script>
}
@section JsInclude{
}

<div class="page-content">
    <div class="page-header">
        <h1>
            <a href="@Url.Action("Index")">Danh sách Yêu cầu</a>
            <small>
                <i class="ace-icon fa fa-angle-double-right"></i>
                Chỉnh sửa Danh Mục
            </small>
        </h1>
    </div><!-- /.page-header -->

    @if (Model != null)
    {
        <div class="row">
            <div class="col-xs-12">
                <!-- PAGE CONTENT BEGINS -->
                @*<form class="form-horizontal" role="form" action="Edit" method="post">*@
                @using (Html.BeginForm("Save", "Request", new { ReturnUrl = ViewBag.ReturnUrl, id = Model.Id }, FormMethod.Post, new { role = "form", @class = "form-horizontal", enctype = "multipart/form-data" }))
                {
                    <div style="min-height:315px;">
                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Trạng thái </label>
                            <div class="col-sm-4">
                                <select class="form-control" id="form-field-select-1" name="status">
                                    <option value="0" @(Model.Status == 0 ? "selected" : "")>Chưa xử lý</option>
                                    <option value="1" @(Model.Status == 1 ? "selected" : "")>Đã xử lý</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-5" style="padding-left:20%">
                                Số điện thoại
                            </div>
                            <div class="col-sm-7 edit-detail">
                                @Model.Phone
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-5" style="padding-left:20%">
                                Email
                            </div>
                            <div class="col-sm-7 edit-detail">
                                @Model.Email
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-5" style="padding-left:20%">
                                Ghi chú
                            </div>
                            <div class="col-sm-7 edit-detail">
                                @Model.Des
                            </div>
                        </div>
                    </div>
                    <div class="clearfix form-actions">
                        <div class="col-md-offset-3 col-md-9">
                            <button onclick="" class="btn btn-success" type="submit">
                                <i class="ace-icon fa fa-pencil-square-o bigger-110"></i>
                                Lưu
                            </button>
                            &nbsp; &nbsp; &nbsp;
                            <a class="btn btn-info" type="reset" href="@Url.Action("Index")">
                                <i class="ace-icon fa fa-reply icon-only bigger-110"></i>
                                Quay lại
                            </a>
                        </div>
                        <div class="col-md-offset-3 col-md-9 error" style="color:red;display:none">
                            Chưa nhập đủ thông tin
                        </div>
                    </div>
                }
                @*</form>*@
            </div>
        </div>
    }
</div>
