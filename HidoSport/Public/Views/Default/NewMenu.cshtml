@model List<HidoSport.Models.LeftMenu>
@{
    ViewBag.Title = "NewMenu";
}
<div class="menu">
    <div class="container">
        <div class="row">
            <nav class="navbar navbar-default" role="navigation">

                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="/">Trang chủ</a></li>
                        @foreach (var i in Model)
                        {
                            if (i.CateChild != null)
                            {
                                <li class="dropdown">
                                    <a href="/@i.Cate.NameCode" class="dropdown-toggle" data-toggle="dropdown">@i.Cate.Name <b class="caret"></b></a>
                                    <ul class="dropdown-menu">
                                        @foreach (var a in i.CateChild)
                                        {
                                            <li><a href="/@i.Cate.NameCode/@a.NameCode">@a.Name</a></li>
                                        }
                                    </ul>
                                </li>
                            }
                            else
                            {
                                <li><a href="/@i.Cate.NameCode">@i.Cate.Name</a></li>
                            }

                        }
                        <li class="">
                            <a href="/gioi-thieu" class="">Giới thiệu</a>
                        </li>
                        <li class="">
                            <a href="/gioi-thieu#giao-hang">Chính sách giao hàng</a>
                        </li>
                        <li class="">
                            <a href="/blog">Blog</a>
                        </li>
                    </ul>
                </div><!-- /.navbar-collapse -->

            </nav>
        </div>
    </div>
</div>